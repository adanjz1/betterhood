<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
android:id="@+id/linlayoutBase"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:orientation="vertical"
xmlns:android="http://schemas.android.com/apk/res/android"
>
<RelativeLayout
android:id="@+id/widget0"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
xmlns:android="http://schemas.android.com/apk/res/android"
>
<TextView
android:id="@+id/name"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
 android:text="Name:" 
 android:layout_marginBottom="10px">
</TextView>
<TextView
android:id="@+id/name_txt"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="what the name is" 
android:layout_marginBottom="10px" android:layout_toRightOf="@id/name" android:layout_marginLeft="20px">
android:layout_toRightOf = "@id/name"
</TextView>

<TextView
android:id="@+id/info"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_marginBottom="10px" android:layout_below="@id/name" android:text="What's Similar:">

android:layout_below = "@id/name" 
android:text="What's Similar:">
</TextView>
<TextView
android:id="@+id/info_txt"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_marginBottom="10px" android:text="Comment goes here" android:layout_toRightOf="@id/info" android:layout_below="@id/name_txt" android:layout_marginLeft="20px">
android:layout_toRightOf = "@id/info"
</TextView>

<EditText
android:id="@+id/comment"
android:text="Respond"
android:textSize="18sp"
android:layout_y="64px"
android:layout_below = "@id/info" android:layout_x="0px" android:layout_width="320px" android:layout_height="80px" android:layout_marginTop="20px" android:layout_marginBottom="20px">
</EditText>

<Button
android:id="@+id/back"
android:layout_height="wrap_content"
android:layout_x="0px"
android:layout_y="141px"
android:layout_below = "@id/comment"

android:text="Back" android:layout_width="125px">
</Button>
<Button
android:id="@+id/post"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_below = "@id/comment"
android:layout_toRightOf = "@id/back"
android:text="Send Response" android:layout_marginLeft="75px">
</Button>
</RelativeLayout>

</LinearLayout>
