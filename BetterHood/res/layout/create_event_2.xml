<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	>	
	<ScrollView
		android:id="@+id/scrollview"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		>
	<View
		android:id="@+id/headerCreateEvent"
		android:layout_width = "fill_parent"
		android:layout_height = "35dip"
		android:layout_marginBottom = "6dip"
		android:layout_alignParentTop = "true"
		android:background = "#FF909090"
	/>
	<TextView
		android:layout_width = "wrap_content"
		android:layout_height = "wrap_content"
		android:layout_alignParentTop = "true"
		android:layout_centerHorizontal = "true"
		android:text = "Create an event\nStep 2 of 2"
	/>
	
	<TextView
		android:id = "@+id/textStep2Caption"
		android:layout_width = "fill_parent"
		android:layout_height = "wrap_content"
		android:layout_below = "@id/headerCreateEvent"
		android:text = "@string/createEventStep2Caption"
	/>
	
	<View
		android:id="@+id/viewDivider"
		android:layout_height = "2dip"
    	android:layout_width = "fill_parent"
    	android:layout_marginTop = "6dip"
    	android:layout_marginBottom = "6dip"
    	android:layout_below = "@id/textStep2Caption"
    	android:layout_centerHorizontal = "true"
    	android:background="#FF909090"
	/>
	
	<EditText
    	android:id="@+id/editEventName"
    	android:layout_height = "wrap_content"
    	android:layout_width = "225dip"
    	android:layout_below = "@id/viewDivider"
    	android:layout_alignParentRight = "true"
    	android:layout_marginRight = "6dip"
    	android:inputType = "text"
    	android:hint = "Enter an event name"
    />
    <TextView
   		android:layout_height = "wrap_content"
   		android:layout_width = "wrap_content"
   		android:layout_below = "@id/viewDivider"
   		android:layout_toLeftOf = "@id/editEventName"
   		android:text = "Event Name:"
   		android:layout_marginRight = "6dip"
   	/>
	
	<Button
		android:id = "@+id/buttonBack"
		android:text = "Back to Templates"
		android:layout_height = "wrap_content"
		android:layout_width = "150dip"
		android:layout_alignParentLeft = "true"
		android:layout_alignParentBottom = "true"
	/>
	<Button
		android:id = "@+id/buttonForward"
		android:text = "Add Event!"
		android:layout_height = "wrap_content"
		android:layout_width = "150dip"
		android:layout_toRightOf = "@id/buttonBack"
		android:layout_alignParentRight = "true"
		android:layout_alignParentBottom = "true"
	/>
	</ScrollView>
</RelativeLayout>