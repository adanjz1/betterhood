<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
android:id="@+id/linlayoutBase"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:orientation="vertical"
xmlns:android="http://schemas.android.com/apk/res/android"
>
		<ScrollView
		android:id="@+id/scrollview"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		>
<RelativeLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	>
	
	
	<TextView
		android:id="@+id/labelEventType"
		android:text = "Type:"
		android:layout_width = "100dip"
		android:layout_height = "wrap_content"
		android:layout_alignParentTop = "true"
	/>
	<TextView
		android:id="@+id/textEventType"
		android:layout_width = "fill_parent"
		android:layout_height = "wrap_content"
		android:layout_toRightOf = "@id/labelEventType"
		android:layout_alignParentTop = "true"
	/>
	
	<TextView
		android:id="@+id/labelEventDate"
		android:text = "Date/Time:"
		android:layout_width = "100dip"
		android:layout_height = "wrap_content"
		android:layout_below = "@id/textEventType"
		android:layout_marginTop = "5dip"
	/>
	<TextView
		android:id="@+id/textEventDate"
		android:layout_width = "fill_parent"
		android:layout_height = "wrap_content"
		android:layout_below = "@id/textEventType"
		android:layout_toRightOf = "@id/labelEventDate"
		android:layout_marginTop = "5dip"
	/>
	
	<TextView
		android:id="@+id/labelEventAddress"
		android:text = "Address:"
		android:layout_width = "100dip"
		android:layout_height = "wrap_content"
		android:layout_below = "@id/textEventDate"
		android:layout_marginTop = "5dip"
	/>
	<TextView
		android:id="@+id/textEventAddress"
		android:layout_width = "fill_parent"
		android:layout_height = "wrap_content"
		android:layout_toRightOf = "@id/labelEventAddress"
		android:layout_below = "@id/textEventDate"
		android:layout_marginTop = "5dip"
	/>	
	
	<TextView
		android:id="@+id/labelEventHost"
		android:text = "Hosted by:"
		android:layout_width = "100dip"
		android:layout_height = "wrap_content"
		android:layout_below = "@id/textEventAddress"
		android:layout_marginTop = "5dip"
	/>
	<TextView
		android:id="@+id/textEventHost"
		android:layout_width = "fill_parent"
		android:layout_height = "wrap_content"
		android:layout_toRightOf = "@id/labelEventHost"
		android:layout_below = "@id/textEventAddress"
		android:layout_marginTop = "5dip"
	/>
	
	<TextView
		android:id="@+id/labelEventDescription"
		android:text = "Event\nDescription:"
		android:layout_width = "100dip"
		android:layout_height = "wrap_content"
		android:layout_below = "@id/labelEventHost"
		android:layout_marginTop = "5dip"
	/>
	<TextView
		android:id="@+id/textEventDescription"
		android:layout_width = "fill_parent"
		android:layout_height = "wrap_content"
		android:layout_toRightOf = "@id/labelEventDescription"
		android:layout_below = "@id/textEventHost"
		android:layout_marginTop = "5dip"
	/>
	
	<Button
		android:id = "@+id/buttonBack"
		android:text = "Cancel"
		android:layout_height = "wrap_content"
		android:layout_width = "100dip"
		android:layout_alignParentLeft = "true"
		android:layout_alignParentBottom = "false"
		android:layout_below = "@id/labelEventDescription"
		android:layout_marginTop = "20dip"
		
	/>
	<Button
		android:id = "@+id/buttonForward"
		android:text = "Join Event!"
		android:layout_height = "wrap_content"
		android:layout_width = "100dip"
		android:layout_toRightOf = "@id/buttonBack"
		android:layout_alignParentBottom = "false"
		android:layout_below = "@id/textEventDescription" android:layout_alignBottom="@id/buttonBack" android:layout_alignParentRight="true" android:layout_alignParentLeft="false" android:layout_alignRight="@id/buttonBack" android:layout_alignTop="@id/buttonBack"/>
	
	
	<TextView
		android:id="@+id/labelEventComment"
		android:layout_width = "100dip"
		android:layout_height = "wrap_content"
		android:layout_marginTop = "10dip"
		android:layout_below = "@id/buttonBack" android:text="Add a comment to this event:"/>
	
	<EditText
    	android:id="@+id/editEventComment"
    	android:layout_height = "wrap_content"
    	android:layout_width = "fill_parent"
    	android:layout_marginLeft = "5dip"
    	android:layout_marginRight = "5dip"
    	
    	android:gravity = "top"
    	android:scrollHorizontally = "false"
    	android:layout_toRightOf = "@id/labelEventComment"
    	android:layout_below = "@id/buttonForward"
    	android:inputType = "text"
    	android:singleLine = "false"
    android:layout_alignBottom="@id/labelEventComment" android:layout_alignParentRight="true" android:layout_alignTop="@id/labelEventComment"/>

	
	<Button
		android:id = "@+id/buttonViewComments"
		android:text = "View Comments"
		android:layout_height = "wrap_content"
		android:layout_width = "100dip"
		android:layout_marginTop = "10dip"
		
		android:layout_alignParentRight = "false"
		android:layout_alignParentBottom = "false"
		android:layout_below = "@id/labelEventComment"
		
	/>
	<Button
		android:id = "@+id/buttonAddComment"
		android:text = "Add Comment"
		android:layout_height = "wrap_content"
		android:layout_width = "100dip"
		android:layout_toRightOf = "@id/buttonViewComments"
		android:layout_alignRight="@id/buttonViewComments"
		
	    android:layout_alignParentRight="true" android:layout_alignTop="@id/buttonViewComments" android:layout_alignParentBottom="@id/buttonViewComments" android:layout_alignBottom="@id/buttonViewComments"/>
</RelativeLayout>
</ScrollView>
</LinearLayout>